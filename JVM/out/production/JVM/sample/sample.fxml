<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml">
    <top>
        <HBox spacing="10" >
            <padding>
                <Insets bottom="10" right ="10" />
            </padding>

            <Button text="Okay" prefWidth="90" style="-fx-background-color: #283B4E; -fx-border-radius: 500;
            -fx-background-radius: 8em;
            -fx-min-width: 150px;
            -fx-min-height: 60px;
            -fx-max-width: 150px;
            -fx-max-height: 60px;
            -fx-effect: dropShadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0.5, 0.5, 0)" />


            <Button text="Cancel" prefWidth="90"/>



        </HBox>

    </top>



</BorderPane>
